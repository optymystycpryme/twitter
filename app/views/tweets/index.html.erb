<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <p id="notice"><%= notice %></p>

      <h1 class="well jumbotron">Tweets</h1>
      <div>
        <%= link_to 'Tweet', new_tweet_path, class: "btn btn-md btn-primary"%>
      </div>
      <br>
      <div class="col-lg-12">
        <div>
          <% @tweets.each do |tweet| %>
            <div class="well">
              <div id="tweet_message"><h4>Tweet</h4></div>
              <br>
              <div class="well"><%= tweet.message.html_safe %></div>
              <br>
              <div class="btn btn-info">
                <span id="tweet_user">User </span>
                @<%= link_to tweet.user.username, show_user_path(id: tweet.user.id) %>
                <%= link_to 'Show', tweet, class: "btn btn-xs btn-success" %>
                <%= link_to 'Edit', edit_tweet_path(tweet), class: "btn btn-xs btn-warning" %>
                <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>    
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <br>
    </div>  
  </div>
</div>

